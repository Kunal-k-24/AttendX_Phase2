<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" /> <!-- ðŸ”¹ Fix for the Camera Warning -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttendX"
        tools:targetApi="31">
        <!-- ðŸ”¹ Launcher Activity (First screen of the app) -->
        <activity
            android:name=".LoginSelectionActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GetAttendanceActivity" /> <!-- âœ… Authentication Activities -->
        <activity android:name=".QRDisplayActivity" />
        <activity
            android:name=".QRScannerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- âœ… Dashboard Activities -->
        <activity
            android:name=".TeacherDashboardActivity"
            android:exported="true" />
        <activity
            android:name=".StudentDashboardActivity"
            android:exported="true" /> <!-- âœ… Teacher Login -->
        <activity
            android:name=".TeacherLoginActivity"
            android:exported="true" /> <!-- âœ… Attendance Related Activities -->
        <activity
            android:name=".GenerateQRActivity"
            android:exported="true" />
        <activity
            android:name=".MarkAttendanceActivity"
            android:exported="true" />
        <activity
            android:name=".ViewAttendanceActivity"
            android:exported="true" />
        <activity
            android:name=".AttendanceHistoryActivity"
            android:exported="true" />
        <activity
            android:name=".AttendanceActivity"
            android:exported="true" /> <!-- âœ… Splash Screen (if needed) -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true" />
        <activity android:name=".SubmitAttendanceActivity"/>

    </application>

</manifest>